<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_snap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tautvydas.snappyappy.ShowSnapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/showSnapFrame">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loading2"
            android:id="@+id/showSnap"
            android:scaleType = "centerCrop"
            android:onClick="tapAction"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/counterFrame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/counterTextView"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/cardview_light_background"
                android:layout_marginLeft="5dp"/>
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
